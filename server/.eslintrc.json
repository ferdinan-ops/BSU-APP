{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "commonjs": true
    },
    "extends": "standard",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "**/build/*",
        "**/node_modules",
        "**/public/*",
        "**/assets/*",
        "**/client/*"
    ],
    "rules": {
        "prefer-const": "off"
    }
}