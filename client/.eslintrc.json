{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "ignorePatterns": [
        "**/build/*",
        "**/node_modules",
        "**/public/*",
        "**/assets/*",
        "**/server/*",
        "**/tailwind.config.js",
        "**/postcss.config.js",
        "**/vite.config.js"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "multiline-ternary": "off"
    }
}